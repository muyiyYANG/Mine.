page {
  background: -webkit-linear-gradient(top,white,lightblue,rgb(83, 201, 248));
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.title {
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

input,
textarea {
  flex: 1;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 5px;
}
.btn {
  display: inline-block;
  margin: 20px;
  padding: 1em 2em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
  
}
 
 
