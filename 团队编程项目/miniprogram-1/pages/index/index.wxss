/**index.wxss**/
.page {
  height:100%;
  display: flex;
  flex-direction: column;
  
}
.scrollarea {
  width:100%;
  height:150px;
  background-color: lightskyblue;
  
}

.userinfo {
  display: flex;
  height:0px;
  align-items: flex-end;
  padding: 25px;
  
}

.userinfo-avatar {
  width: 96px;
  height: 96px;
  border-radius: 50%;
  border: 1px solid #000; 
  
}

.avatar-wrapper {
  padding:0px;
  width: 96px;
  height: 96px;
  border-radius: 50%;
  border: 1px solid #000; 
}

.avatar {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 24px;
  color: #333;
  align-items: flex-end;
  font-weight: bold;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  align-items: flex-end;
  padding-left: 15px;
  padding-bottom: 40px;
  color:black;
  font-weight: bold;
  font-size: 22px;
}

.nickname-input {
  flex: 2;
}


.list-wrapper {
  width: 100%;
  
}

.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.item-text {
  position: fixed;
  left: 100rpx;
  font-size: 38rpx;
}
.item-array {
  position: fixed;
  right: 60rpx;
  font-size: 60rpx;
}

.menu-icon {
  position: fixed;
  left: 50rpx;
  width: 50rpx;
  height: 50rpx;
}






