/* pages/credit/credit.wxss */
.container {
  padding-top: 20px;
  background-color: linen;
  height:100vh;
}

.total-credit {
  font-size: 50rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.credit-list {
  width: 100%;
  height:100%;
}

.credit-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 3rpx solid #ccc;
  padding:10rpx 0;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.date {
  text-align: left;
  padding-left: 20px;
}

.score {
  text-align: right;
  padding-right: 20px;
}
