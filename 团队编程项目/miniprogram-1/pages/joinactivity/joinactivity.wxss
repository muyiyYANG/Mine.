/* pages/activity/activity.wxss */
/* 容器样式 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background-color: lightgray;
    height: 100vh;
  }
  
  /* 标题样式 */
  .title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    padding: 10px;
  }
  
  /* 表格样式 */
  .table {
    width: 100%;
    height: 100%;
    border-collapse: collapse;
  }
  
  /* 表头样式 */
  .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ccc;
    padding: 10px 0;
    background-color: #f5f5f5;
    font-weight: bold;
  }
  
  /* 单元格样式 */
  .cell {
    flex: 1;
    text-align: center;
    font-weight: 1000;
    padding: 5px;
  }
  
  /* 鼠标悬停效果 */
  .row:hover {
    background-color: #e5e5e5;
  }
  
  
  
  
  
  
  