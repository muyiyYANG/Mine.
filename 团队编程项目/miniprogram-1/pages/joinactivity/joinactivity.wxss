/* pages/activity/activity.wxss */
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  height:100%;
}

/* 标题样式 */
.title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
  font-style:italic;
  padding: 10px;
  color: #333333;
}

/* 表格样式 */
.table {
  width: 100%;
  border-collapse: collapse;
}

/* 表头样式 */
.row:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #333333;
  padding: 10px 0;
  background-color: #f5f5f5;
  font-weight: bold;
  color: #999999;
}
.row:first-child .cell {
  
  border: 1px solid #333333;
}

/* 单元格样式 */
.cell {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  color: #333333;
  border-left:1px solid #333333 ;
  border-right:1px solid #333333 ;
}
.cell:nth-child(4n) {
  border-bottom: 1px solid #333333; 
}
/* 鼠标悬停效果 */
.row:hover {
  background-color: #e5e5e5;
}
