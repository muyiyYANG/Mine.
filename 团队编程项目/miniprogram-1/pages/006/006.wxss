
page {
  background: -webkit-linear-gradient(top,white,lightblue,rgb(83, 201, 248));
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px;
}
.search-box {
  width: 100%;
  
  margin-bottom: 20px;
}
.search-box input {
  width: 95%;
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.history-list {
  width: 100%;
}
.history-list text {
  font-size: 16px;
  color: #333;
  padding: 5px 0;
}
